{
  "name": "@caefisica/web",
  "version": "0.9.6",
  "private": true,
  "author": "David Duran <contacto@altmails.com> (https://totallynotdavid.github.io/)",

  "repository": {
    "type": "git",
    "url": "https://github.com/caefisica/web.git"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/totallynotdavid"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults"
  ],

  "scripts": {
    "init": "shx rm -rf .git && git init -b master",
    "clean": "npm run clean:build && npm run clean:packages",
    "clean:build": "shx rm -rf public resources",
    "clean:packages": "shx rm -rf package-lock.json node_modules",
  
    "hugo": "exec-bin node_modules/.bin/hugo/hugo",
    "hugo:create": "npm run hugo new",
    "hugo:start": "npm run hugo server --disableFastRender",
    "hugo:start:lan": "npm run hugo server --bind=0.0.0.0 --baseURL=http://192.168.18.10 --port=1313",
    "hugo:build": "npm run hugo --gc --minify",
    "hugo:build:lan": "npm run hugo --gc --minify --baseURL=http://192.168.18.10",
    "hugo:build:preview": "npm run build -D -F",
    "hugo:version": "npm run hugo version",

    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \".github/*.md\" \"content/**/*.md\" \"docs/*.md\"",

    "test": "npm run -s lint",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "serve": "netlify functions:serve"
  },

  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@fullhuman/postcss-purgecss": "^5.0",
    "@hyas/images": "^1.0.2",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4.15",
    "bootstrap": "^5.3.0",
    "clipboard": "^2.0.11",
    "dotenv": "^16.3.1",
    "encoding": "^0.1.13",
    "eslint": "^8.47.0",
    "exec-bin": "^1.0.0",
    "highlight.js": "^11.6",
    "hugo-installer": "^4.0",
    "instant.page": "^5.1",
    "katex": "^0.16.8",
    "lazysizes": "^5.3.2",
    "markdownlint-cli2": "^0.10.0",
    "mermaid": "^10.4.0",
    "netlify-plugin-cloudinary": "^1.2.0",
    "node-fetch": "^3.3.0",
    "pdfjs-dist": "^3.8.162",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.0",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "otherDependencies": {
    "hugo": "0.114.1"
  }
}
