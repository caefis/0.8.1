{
  "name": "@caefisica/web",
  "version": "0.9.6",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "init": "shx rm -rf .git && git init -b master",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "npm run clean",
    "start": "exec-bin node_modules/.bin/hugo/hugo server --disableFastRender",
    "start:lan": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --baseURL=http://192.168.18.10 --port=1313",
    "prebuild": "npm run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "build:lan": "exec-bin node_modules/.bin/hugo/hugo --gc --minify --baseURL=http://192.168.18.10",
    "build:preview": "npm run build -D -F",
    "build:functions": "netlify-lambda build assets/submission-created",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json node_modules",
    "clean:hugo": "shx rm -rf admin apuntes audio blog css fonts i images js unmsm rss site.webmanifest safari-pinned-tab.svg logo-cae.png logo-cae.svg android-chrome-192x192.png android-chrome-512x512.png apple-touch-icon.png favicon-16x16.png favicon-32x32.png favicon.ico cae.png assets/jsconfig.json",
    "cleaner": "npm run clean && npm run clean:install && npm run clean:hugo",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:styles-fix": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\" --fix",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \".github/*.md\" \"content/**/*.md\" \"docs/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \".github/*.md\" \"content/**/*.md\" \"docs/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "test": "npm run -s lint",
    "env": "env",
    "precheck": "npm version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "serve": "netlify-lambda serve functions"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.4",
    "@fullhuman/postcss-purgecss": "^5.0",
    "@hyas/images": "^1.0.0",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4.13",
    "bootstrap": "^5.3.0",
    "clipboard": "^2.0.11",
    "dotenv": "^16.1.4",
    "encoding": "^0.1.13",
    "eslint": "^8.42.0",
    "exec-bin": "^1.0.0",
    "highlight.js": "^11.6",
    "hugo-installer": "^4.0",
    "instant.page": "^5.1",
    "katex": "^0.16",
    "lazysizes": "^5.3.2",
    "markdownlint-cli2": "^0.7.1",
    "mermaid": "^10.2.2",
    "netlify-plugin-cloudinary": "^1.2.0",
    "node-fetch": "^3.3.0",
    "pdfjs-dist": "^3.7.107",
    "postcss": "^8.4",
    "postcss-cli": "^10.0",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^14.15.0",
    "stylelint-config-standard-scss": "^6.1"
  },
  "otherDependencies": {
    "hugo": "0.104.1"
  }
}
